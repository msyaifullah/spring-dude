    <!-- ====================================================================== -->
    <!-- Mirrors                                                                 -->
    <!-- ====================================================================== -->
    <mirrors>
        <!--
        IMPORTANT: Comment out any corporate mirrors that are not accessible.

        If you see errors like:
        "airasia.jfrog.io: nodename nor servname provided, or not known"

        Make sure to comment out or remove the problematic mirror below.
        -->

        <!--
