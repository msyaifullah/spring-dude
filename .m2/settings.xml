        <!--
        Development Profile
        Additional settings for local development
        -->
        <profile>
            <id>dev</id>
            <properties>
                <spring.profiles.active>dev</spring.profiles.active>
            </properties>
        </profile>

        <!--
        CI/CD Profile
        Settings for continuous integration
        -->
        <profile>
            <id>ci</id>
            <properties>
                <spring.profiles.active>gitlab</spring.profiles.active>
            </properties>
        </profile>
    </profiles>

    <!-- ====================================================================== -->
    <!-- Active Profiles                                                         -->
    <!-- ====================================================================== -->
    <activeProfiles>
        <!-- Always use Maven Central -->
        <activeProfile>maven-central</activeProfile>

        <!--
        Uncomment to activate additional profiles:
