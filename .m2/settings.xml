<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.2.0
                              https://maven.apache.org/xsd/settings-1.2.0.xsd">

    <!--
    ============================================================================
    Maven Settings for spring-dude project
    ============================================================================

    To use this file:
    1. Copy to ~/.m2/settings.xml
       cp .m2/settings.xml ~/.m2/settings.xml

    2. Or use directly with Maven:
       mvn clean install -s .m2/settings.xml
    ============================================================================
    -->

    <!-- Local repository location -->
    <localRepository>${user.home}/.m2/repository</localRepository>

    <!-- Offline mode - set to true to work without network -->
    <offline>false</offline>

